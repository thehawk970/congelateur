{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <a href="{{ path('app_category_new') }}" class="btn btn-outline-success">Create new</a>
    <table class="table">
        <thead>
            <tr>
                <th>Label</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ component('Tag', {color: category.color}) }}{{ category.label }}</td>

                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
