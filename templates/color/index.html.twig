{% extends 'base.html.twig' %}

{% block title %}Color index{% endblock %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Color</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for color in colors %}
            <tr>
                <td>{{ color.id }}</td>
                <td>{{ color.label }}</td>
                <td>{{ component('Tag', {
                        color: color
                    }) }}</td>
                <td>
                    <a href="{{ path('app_color_show', {'id': color.id}) }}">show</a>
                    <a href="{{ path('app_color_edit', {'id': color.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_color_new') }}">Create new</a>
{% endblock %}
