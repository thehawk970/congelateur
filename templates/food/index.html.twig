{% extends 'base.html.twig' %}

{% block title %}Food index{% endblock %}

{% block body %}

    {% if food|length > 0 %}
    <table id="datatable" class="table table-bordered dt-responsive  nowrap w-100">
        <thead>
            <tr>
                <th>Cat√©gory</th>
                <th>Quantity</th>
                <th>Label</th>
                <th>Weight</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for food in food %}
            <tr>
                <td>{{ component('Tag', {
                        color: food.category.color,
                        food: food
                    }) }}</td>
                <td>{{ food.quantity }}</td>
                <td>{{ food.label }}</td>
                <td>{{ food.weight }}</td>
                <td>
                    <a href="{{ path('app_food_show', {'id': food.id}) }}">show</a>
                    <a href="{{ path('app_food_edit', {'id': food.id}) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
        <p>No food found</p>
    {% endif %}

